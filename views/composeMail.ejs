
    <form action="/composeMail" method="POST">

        <div class="form-group">
            <label class="form-group">
                To
            </label>
            <input class="form-control" type="text" name="to">
        </div>
        <div class="form-group">
            <label class="form-group">
                CC
            </label>
            <input class="form-control" type="text" name="cc">
        </div>
        <div class="form-group">
            <label class="form-group">
                BCC
            </label>
            <input class="form-control" type="text" name="bcc">
        </div>
        
        <div class="form-group">
            <label class="form-group">
                Subject
            </label>
            <input class="form-control" type="text" name="subject">
        </div>
        <div class="form-group">
            <label class="form-group">
                Body
            </label>
            <textarea class="form-control" rows="10" type="text" name="emailBody"></textarea>
        </div>
       
        <button class="btn btn-primary" type="submit" name="button">Send Email</button>
    
    </form>
    

